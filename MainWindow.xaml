        <Label Content="Максимальный вес" HorizontalAlignment="Left" Margin="539,20,0,0" VerticalAlignment="Top"/>
        <StackPanel Margin="447,160,160,69" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Label Content="Предмет"></Label>
                <TextBox x:Name="txtName" Width="135"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Margin="0,20,0,0">
                <Label Content="Вес"></Label>
                <TextBox x:Name="txtWeight" Width="164"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  Margin="0,20,0,0">
                <Label Content="Стоимость"></Label>
                <TextBox x:Name="txtCost" Width="125"></TextBox>
            </StackPanel>
            <Button Content="Добавить" x:Name="btnAdd" Click="btnAdd_Click" Width="193"  Margin="0,20,0,0"/>

        </StackPanel>

    </Grid></Viewbox>
</Window>
