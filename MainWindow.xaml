<Window x:Class="SenlaTask6WPFNET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SenlaTask6WPFNET"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox>
    <Grid>
        <DataGrid Margin="35,38,461,69" AutoGenerateColumns="True" x:Name="dtRukzak" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn">
            
        </DataGrid>
        <TextBox HorizontalAlignment="Left" x:Name="txtMaxWeight" Margin="541,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="22" Width="112"/>
